#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/pointing.h>
#define KEYS_L 0 1 2 3 4 5 12 13 14 15 16 17 24 25 26 27 28 29  // Left-hand keys
#define KEYS_R 6 7 8 9 10 11 18 19 20 21 22 23 30 31 32 33 34 35  // Right-hand keys
#define THUMBS 36 37 38 39 40 41  // Thumb keys

/ {
  chosen {
    zmk,matrix_transform = &default_transform;
    //zmk,matrix_transform = &five_column_transform;
  };
};


/ {
    combos {
        compatible = "zmk,combos";
        
        combo_to_layer {
            timeout-ms = <100>;
            key-positions = <1 10>;
            layers = <0>;
            require-prior-idle-ms = <200>;
            bindings = <&to 3>;
        };
        
        combo_cut {
            timeout-ms = <100>;
            key-positions = <5 6>;
            layers = <0>;
            require-prior-idle-ms = <200>;
            bindings = <&kp C_NEXT>;
        };
        
        combo_copy {
            timeout-ms = <100>;
            key-positions = <17 18>;
            layers = <0>;
            require-prior-idle-ms = <200>;
            bindings = <&kp C_PLAY_PAUSE>;
        };
        
        combo_paste {
            timeout-ms = <100>;
            key-positions = <29 30>;
            layers = <0>;
            require-prior-idle-ms = <200>;
            bindings = <&kp C_PREV>;
        };
        combo_BT1 {
            timeout-ms = <100>;
            key-positions = <29 1>;
            layers = <0>;
            require-prior-idle-ms = <200>;
            bindings = <&bt BT_SEL 0>;
        };
        combo_BT2 {
            timeout-ms = <100>;
            key-positions = <29 2>;
            layers = <0>;
            require-prior-idle-ms = <200>;
            bindings = <&bt BT_SEL 1>;
        };
        combo_BT3 {
            timeout-ms = <100>;
            key-positions = <29 3>;
            layers = <0>;
            require-prior-idle-ms = <200>;
            bindings = <&bt BT_SEL 2>;
        };
        combo_BT4 {
            timeout-ms = <100>;
            key-positions = <29 4>;
            layers = <0>;
            require-prior-idle-ms = <200>;
            bindings = <&bt BT_SEL 3>;
        };
        combo_BT5 {
            timeout-ms = <100>;
            key-positions = <29 5>;
            layers = <0>;
            require-prior-idle-ms = <200>;
            bindings = <&bt BT_SEL 4>;
        };
        combo_CLR {
            timeout-ms = <100>;
            key-positions = <29 11>;
            layers = <0>;
            require-prior-idle-ms = <200>;
            bindings = <&bt BT_CLR>;
        };
    };
};

/ {
    behaviors {
td0: tap_dance_0 {
      compatible = "zmk,behavior-tap-dance";
      label = "TAP_DANCE_0";
      #binding-cells = <0>;
      tapping-term-ms = <200>;
      bindings = <&kp G>, <&kp LBKT>, <&kp LBRC>;
      };
td1: tap_dance_1 {
    compatible = "zmk,behavior-tap-dance";
    label = "TAP_DANCE_1";
    #binding-cells = <0>;
    tapping-term-ms = <200>;
    bindings = <&kp H>, <&kp RBKT>, <&kp RBRC>;
                };
td2: tap_dance_2 {
    compatible = "zmk,behavior-tap-dance";
    label = "TAP_DANCE_2";
    #binding-cells = <0>;
    tapping-term-ms = <200>;
    bindings = <&kp T>, <&kp EQUAL>, <&kp PLUS>;
                };
td3: tap_dance_3 {
    compatible = "zmk,behavior-tap-dance";
    label = "TAP_DANCE_3";
    #binding-cells = <0>;
    tapping-term-ms = <200>;
    bindings = <&kp Y>, <&kp MINUS>, <&kp UNDER>;
                };
td4: tap_dance_4 {
    compatible = "zmk,behavior-tap-dance";
    label = "TAP_DANCE_4";
    #binding-cells = <0>;
    tapping-term-ms = <200>;
    bindings = <&kp LC(Z)>, <&kp LC(Y)>;
                };
td5: tap_dance_5 {
    compatible = "zmk,behavior-tap-dance";
    label = "TAP_DANCE_5";
    #binding-cells = <0>;
    tapping-term-ms = <200>;
    bindings = <&kp LC(C)>, <&kp LC(X)>, <&kp LC(V)>;
                };

mo_tog: behavior_mo_tog {
        compatible = "zmk,behavior-hold-tap";
        label = "mo_tog";
        #binding-cells = <2>;
        flavor = "hold-preferred";
        tapping-term-ms = <200>;
        bindings = <&mo>, <&tog>;
                };
  hml: home_row_left {
      compatible = "zmk,behavior-hold-tap";
      label = "HOME_ROW_LEFT";
      #binding-cells = <2>;
      flavor = "balanced";
      tapping-term-ms = <280>;
      quick-tap-ms = <175>;
      require-prior-idle-ms = <150>;
      bindings = <&kp>, <&kp>;
      hold-trigger-key-positions = <KEYS_R THUMBS>;
      hold-trigger-on-release;
  };
  
  hmr: home_row_right {
      compatible = "zmk,behavior-hold-tap";
      label = "HOME_ROW_RIGHT";
      #binding-cells = <2>;
      flavor = "balanced";
      tapping-term-ms = <280>;
      quick-tap-ms = <175>;
      require-prior-idle-ms = <150>;
      bindings = <&kp>, <&kp>;
      hold-trigger-key-positions = <KEYS_L THUMBS>;
      hold-trigger-on-release;
  };

        };

        keymap {
                compatible = "zmk,keymap";

                default_layer {
                        label = "QWERTY";
// -----------------------------------------------------------------------------------------------------------------------------------------------------------
// |  ESC        |  Q         |  W        |  E        |  R         |    |  T = +  |     |  _ - Y |  U           |  I        |  O         |  P       | BKSP   |
// | CAPS (LYR)  |  CTRL / A  |  ATL / S  |  Meh / D  |  Hyper / F |    |  G [ {  |     | } ] H  |  Hyper / J   |  Meh / K  |  ALT / L  | CTRL / ;  |  '     |
// | SHFT (      |  Z         |  X        |  C        |  V         |    |  B      |     |  N     |  M           |  ,        |  .         |  /       | SHFT ) |
//                                        | GUI       | LAYER 1    |    | TAB     |     | SPC    | RSE          | ALT       |
                        bindings = <
   &kp ESC              &kp Q          &kp W         &kp E                 &kp R                     &td2      &td3      &kp U                     &kp I                &kp O         &kp P             &kp BSPC
   &caps_word           &hml LCTRL A   &hml LALT S   &hml LC(LS(LALT)) D   &hml LC(LS(LA(LGUI))) F   &td0      &td1      &hmr LC(LS(LA(LGUI))) J   &hmr LC(LS(LALT)) K  &hmr LALT L   &hmr LCTRL SEMI   &mt PIPE SQT
   &mt LSHFT LPAR       &kp Z          &kp X         &kp C                 &kp V                     &kp B     &kp N     &kp M                     &kp COMMA            &kp DOT       &mt BSLH FSLH     &mt RSHFT RPAR
                                                     &kp LGUI              &mo_tog 1 1               &kp TAB   &kp SPC   &kp RET                   &td4
                        >;
                };
                lower_layer {
                        label = "NUMBER";
// -----------------------------------------------------------------------------------------
// |  TAB |  1     |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  | BKSP |
// | BTCLR| BT_NXT |     | LFT | RGT |     |   |     | UP  | DWN |     |     |      |
// | SHFT |        |     |     |     |     |   |     |     |     |     |     |      |
//                    | GUI |     | SPC |   | ENT |     | ALT |
                        bindings = <
 &trans    &kp N1   &kp N2   &kp N3    &kp N4     &kp N5       &kp N6   &kp N7    &kp N8     &kp N9      &kp N0  &kp DEL
 &trans    &trans   &trans   &trans    &trans     &trans       &trans   &kp LEFT  &kp UP     &kp RIGHT   &trans  &trans
 &trans    &trans   &trans   &trans    &trans     &trans       &trans   &trans    &kp DOWN   &trans      &trans  &trans
                             &kp LGUI  &to 2      &trans       &trans   &trans    &td5
                        >;
                };

                raise_layer {
                        label = "Function";
// -----------------------------------------------------------------------------------------
// |  TAB |  !  |  @  |  #  |  $  |  %  |   |  ^  |  &  |  *  |  (  |  )  | BKSP |
// | CTRL |     |     |     |     |     |   |  -  |  =  |  [  |  ]  |  \  |  `   |
// | SHFT |     |     |     |     |     |   |  _  |  +  |  {  |  }  | "|" |  ~   |
//                    | GUI |     | SPC |   | ENT |     | ALT |
                        bindings = <
   &kp F1   &kp F2    &kp F3   &kp F4   &kp F5     &kp F6    &kp F7   &kp F8   &kp F9   &kp F10  &kp F11  &kp F12
   &trans   &trans    &trans   &trans   &trans     &trans    &trans   &trans   &trans   &trans   &trans   &trans
   &trans   &trans    &trans   &trans   &trans     &trans    &trans   &trans   &trans   &trans   &trans   &trans
                    	                  &kp LGUI   &to 0     &trans   &trans   &trans   &trans
                        >;
                };
                mouse_layer {
                        label = "MOUSE";
// -----------------------------------------------------------------------------------------
// |  TAB |  !  |  @  |  #  |  $  |  %  |   |  ^  |  &  |  *  |  (  |  )  | BKSP |
// | CTRL |     |     |     |     |     |   |  -  |  =  |  [  |  ]  |  \  |  `   |
// | SHFT |     |     |     |     |     |   |  _  |  +  |  {  |  }  | "|" |  ~   |
//                    | GUI |     | SPC |   | ENT |     | ALT |
                        bindings = <
   &none            &none   &none   &none   &none   &none      &trans           &mkp LCLK        &mmv MOVE_UP     &mkp RCLK         &trans             &trans
   &none            &trans  &trans  &trans  &trans  &none      &msc SCRL_LEFT   &mmv MOVE_LEFT   &mmv MOVE_DOWN   &mmv MOVE_RIGHT   &msc SCRL_RIGHT    &trans
   &studio_unlock   &none   &none   &none   &none   &none      &trans           &msc SCRL_UP     &msc MCLK        &msc SCRL_DOWN    &trans             &trans
                            &trans  &to 0   &none              &trans           &trans           &trans
                        >;
                };
        };
};
